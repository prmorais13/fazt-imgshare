<div class="card">
  <div class="card-header bg-dark">
    <h3 class="card-title text-white">
      <i class="far fa-image"></i> Upload and image
    </h3>
  </div>
  <div class="card-body">
    <form action="/images" method="post" enctype="multipart/form-data">
      <div class="input-group">
        <div class="custom-file">
          <input type="file" class="custom-file-input" name="image" id="inputGroup"
            aria-describedby="inputGroupFileAddon" required>
          <label for="inputGroup" class="custom-file-label">
            Escolha um arquivo
          </label>
        </div>
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="title" placeholder="Insira um titulo para a imagem.">
      </div>
      <div class="form-group">
        <textarea name="description" rows="2" class="form-control" placeholder="Descreva a imagem." required></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-success">
          <i class="fa fa-upload"> Enviar imagem</i>
        </button>
      </div>
    </form>
  </div>
</div>
<div class="card mt-2">
  <div class="card-header bg-dark text-white">
    <h3><i class="far fa-images"></i> Upload Recentes</h3>
  </div>
  <div class="card-body">
    <div class="row">
      {{#each images}}
      <div class="col-md-4">
        <a href="/images/{{uniqueId}}">
          <img src="/public/upload/{{filename}}" alt="" class="w-100 h-100 img-thumbnail">
        </a>
      </div>
      {{/each}}

    </div>

  </div>
</div>